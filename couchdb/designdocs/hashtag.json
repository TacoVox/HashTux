{
	"_id":"_design/hashtag",
	"_rev":"12345",
     	"lang uage": "javascript",
      	"views":
      	{
		"by_hashtag": {
          	       "map": "function(doc) {
		       	      if (doc.search_term)
			      	 emit(doc.search_term, doc)
			}"
        	},
       		"by_date": {
        		"map": "function(doc) {
			       if (doc.Type == 'purchase')
			       	  emit(doc.Customer, doc.Amount)
			}",
         		"reduce": "function(keys, values) { return sum(values) }"
       		}
     	}
}